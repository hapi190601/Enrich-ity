<div class="background-color">
  <%= render "layouts/flash" %>

  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2 class="page-title">管理者ログイン</h2>
        <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, class:"input-longest-form p-2 focus-green", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, class:"input-longest-form p-2 focus-green", autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, style:"transform:scale(1.5);" %>
              <%= f.label :パスワードを保存しますか？ %>
            </div>
          <% end %>

          <div class="admin-btn-area">
            <%= f.submit "ログイン", class:"btn btn-sm btn-primary m-size-btn text-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


