<div class="background-color">
  <%= render "layouts/flash" %>
  <h2 class="page-title">投稿詳細</h2>

  <% if user_signed_in? %>
  <div class="match-messages-box">
    <% if @post.user_id == current_user.id %>
      <p class="text-center">※これは<%= current_user.nickname %>さん自身の投稿です</p>
    <% else %>
      <% if @post.prefecture_code == current_user.prefecture_code and @post.municipality == current_user.municipality %>
        <p class="match-messages">エリア」 <%= current_user.nickname %>さんのお住まいと一致しています！</p>
      <% elsif @post.prefecture_code == current_user.prefecture_code %>
        <p class="match-messages">「希望のエリア」が <%= current_user.nickname %>さんの都道府県と一致しています！</p>
      <% end %>
    <% end %>
  </div>
  <% else %>
  <div class="match-messages-box">
    <p class="no-sign-in-message">
      ※ログインすると、<strong><%= @post.user.nickname %>さん</strong>とチャットができるようになります
    </p>
  </div>
  <% end %>

  <div class="container">
    <div class="row post-info-area">
      <div class="col-md-8 col-lg-7">
        <div class="post-show-element mb-1">
          <label class="col-md-5">掲載期間</label>
          <p class="inline no-bottom-p"><%= @deadline.strftime("%m月%d日") %>まで (残り<%= @remain %>日)
          </p>
        </div>

        <div class="post-show-element mb-1">
          <label class="col-md-5">投稿者</label>
          <p class="inline no-bottom-p"><%= @post.user.nickname %></p>
        </div>

        <div class="post-show-element mb-1">
          <label class="col-md-5">投稿者の年齢</label>
          <p class="inline no-bottom-p"><%= @post.age %> 歳</p>
        </div>

        <div class="post-show-element mb-1">
          <label class="col-md-5">ジャンル</label>
          <p class="inline no-bottom-p"><%= @post.genre.name %></p>
        </div>

        <div class="post-show-element">
          <label class="col-md-5">希望の性別</label>
          <p class="inline no-bottom-p"><%= @post.gender %></p>
        </div>

        <div class="post-show-element mb-1">
          <label class="col-md-5">希望のエリア</label>
          <% if @post.prefecture_code == nil %>
            <p class="inline no-bottom-p">指定なし</p>
          <% else %>
            <p class="inline no-bottom-p"><%= @post.prefecture_name %> <%= @post.municipality %></p>
            <span>近辺</span>
          <% end %>
        </div>

        <div class="post-show-element mb-1">
          <label class="col-md-5">閲覧数</label>
          <p class="inline no-bottom-p"><%=  @post.impressionist_count %>　views</p>
        </div>
      </div>

      <div class="col-md-4 col-lg-5">
        <%= attachment_image_tag @post, :image, fallback: "no-post-image.png", class:"post-show-img" %>
      </div>

      <div class="post-content-area col-sm-12">
        <div class="post-show-element col-sm-12">
          <label>タイトル</label>
          <br>
          <div class="pl-3">
            <p class="inline p-3"><%= @post.title %></p>
          </div>
        </div>
        <div class="col-sm-12">
          <h3>本文</h3>
          <div class="pl-3">
            <p class="inline p-3"><%= safe_join(@post.content.split("\n"),tag(:br)) %></p>
          </div>
        </div>
      </div>
    </div>

    <% if user_signed_in? %>
    <div class="link-box three-btn">
      <% if @post.user_id == current_user.id %>
        <div class="link">
          <%= link_to "編集する", edit_post_path(@post.id), class:"btn btn-sm edit-btn-color m-size-btn" %>
        </div>
        <div class="link">
          <%= link_to "削除する", post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"btn btn-sm btn-danger m-size-btn" %>
        </div>
      <% else %>
        <div class="link">
          <% if @post.favorited_by?(current_user) %>
            <%= link_to "お気に入り削除", post_favorites_path(@post.id), method: :delete, class:"btn btn-sm btn-light m-size-btn" %>
          <% else %>
            <%= link_to "お気に入り追加", post_favorites_path(@post.id), method: :post, class:"btn btn-sm favorite-btn-color m-size-btn" %>
          <% end %>
        </div>

        <div class="link">
          <% if @isRoom == true %>
            <%= link_to "チャットページへ", room_path(@roomId), data: {"turbolinks"=>false}, class:"btn btn-sm chat-btn-color m-size-btn" %>
          <% else %>
            <%= form_with model: @room, local: true do |f| %>
              <%= fields_for @entry do |e| %>
                <%= e.hidden_field :user_id, :value=> @user.id %>
              <% end %>
              <%= f.submit "チャットをする", class:"btn btn-sm chat-btn-color m-size-btn" %>
            <% end %>
          <% end %>
        </div>

        <div class="link">
          <%= link_to "#{@post.user.nickname}のページへ", user_path(@post.user.id), class:"btn btn-sm user-show-btn-color m-size-btn" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>