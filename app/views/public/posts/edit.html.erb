<div class="background-color">
  <%= render "layouts/flash" %>
  <h2 class="page-title">投稿編集フォーム</h2>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <%= form_with model: @post, url: post_path, local: true do |f| %>

        <div class="field">
          <%= f.label :"【写真】", class:"col-sm-4" %>
          <br>
          <%= f.attachment_field :image, class:"choose-image" %>
        </div>

        <div class="field">
          <%= f.label :"【タイトル】" , class:"col-sm-4" %>
          <br>
          <%= f.text_field :title, placeholder: "タイトルを入力してください", class:"col-sm-8 text-left" %>
        </div>

        <div class="field">
          <%= f.label :"【説明文】", class:"col-sm-4" %>
          <br>
          <%= f.text_area :content, class:"col-sm-11 text-left", rows:10, placeholder: "あなたが探している仲間を具体的に書きましょう！" %>
        </div>

        <div class="field">
          <%= f.label :"【希望の性別】", class:"col-sm-4" %>
          <label>男性 <%= f.radio_button :gender, :"男性", style:"transform:scale(2.0);", class:"m-3" %></label>
          <label>女性 <%= f.radio_button :gender, :"女性", style:"transform:scale(2.0);", class:"m-3" %></label>
          <label>どちらでも <%= f.radio_button :gender, :"どちらでも", style:"transform:scale(2.0);", class:"m-3" %></label>
        </div>

        <div class="field">
          <%= f.label :"【ジャンル】", class:"col-sm-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class:"input-longer-form p-2 text-left" %></td>
        </div>

        <div class="area-of-hope">
          <label class="col-sm-4">
            <span>【希望のエリア】</span>
          </label>

          <div class="col-sm-8">
            <section class="choose-area-of-hope">
              <label>
              <%= f.radio_button :option, 0, class:"radio-button mr-3" %>
              ご自身の住所
              </label>
              <br>
              <span>
                <%= current_user.prefecture_name %>
                <%= current_user.municipality %>
              </span>
            </section>

            <section class="choose-area-of-hope">
              <label>
              <%= f.radio_button :option, 1, class:"radio-button mr-3" %>
              ご自身の最寄駅
              </label>
              <br>
              <span>
                <%= current_user.nearest_station %>
              </span>
            </section>

            <section class="choose-area-of-hope">
              <label>
              <%= f.radio_button :option, 2, class:"radio-button mr-3" %>
              新しく入力する
              </label>
              <br>
              <%= f.text_field :desired_area, value: "", class:"col-sm-8 text-left ml-4" %>
            </section>
          </div>
      </div>

      <div class="actions">
        <%= f.submit "編集する", class:"btn btn-sm btn-success bigger-btn p-3" %>
      </div>
      <% end %>
    </div>
  </div>
</div>