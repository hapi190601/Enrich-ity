<table class="table table-hover text-center user-index-table">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>ニックネーム</th>
      <th>登録日</th>
      <th>投稿数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.nickname %>
        </td>
        <td>
          <%= user.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td><%= user.posts.count %></td>
        <td>
          <%= link_to "詳細", private_user_path(user.id), class:"btn btn-sm btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>