<div class="background-color">
  <h2 class="page-title">ログイン</h2>

  <div class="container">
    <div class="row">
      <div class="sign-in-area">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field flex">
          <div class="col-lg-4 col-md-5">
            <%= f.label :"【メールアドレス】" %>
          </div>
          <div class="text-left">
            <%= f.email_field :email, class:"input-longest-form p-2", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field flex">
          <div class="col-lg-4 col-md-5">
            <%= f.label :"【パスワード】" %>
          </div>
          <div>
            <%= f.password_field :password, class:"input-longest-form p-2", autocomplete: "current-password" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field text-center">
            <%= f.check_box :remember_me, style:"transform:scale(1.5);" %>
            <%= f.label :"　パスワードを保存しますか？" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-sm btn-success m-size-btn" %>
        </div>
      <% end %>

      </div>
    </div>
  </div>

  <div class="sign-up-link">
    <%= render "users/shared/links"%>
  </div>
</div>
