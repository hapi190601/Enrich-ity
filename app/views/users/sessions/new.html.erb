<div class="background-color">
  <h2 class="page-title">ログイン</h2>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.label :"【メールアドレス】", class:"col-sm-6 text-center"%>
          <%= f.email_field :email, class:"input-longest-form p-2", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :"【パスワード】", class:"col-sm-6 text-center" %>
          <%= f.password_field :password, class:"input-longest-form p-2", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <span class="col-sm-5"></span>
            <%= f.check_box :remember_me, style:"transform:scale(1.5);" %>
            <%= f.label :"　パスワードを保存しますか？" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-sm btn-success bigger-btn pl-3 pr-3" %>
        </div>
      <% end %>

      </div>
    </div>
  </div>

  <div class="sign-up-link">
    <%= render "users/shared/links"%>
  </div>
</div>
